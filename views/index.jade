extends layout

block content
    div(class='col-md-10, col-md-offset-1')
        h1= title
    
    div(id='search-form-group', class='col-md-10, col-md-offset-1')
        p Define test parameters below
        div(class='col-md-12')
            div(class='col-md-6')
                h5='Host'
                input(class='form-control', id='host', name='host', value='#{host}')
            div(class='col-md-6')
                h5='Number of total requests'
                input(class='form-control', id='nRequests', name='nRequests', value='#{nRequests}')
        div(class='col-md-12')
            div(class='col-md-3')
                h5='Start Rate'
                input(class='form-control', id='startRate', name='startRate', value='#{startRate}')
            div(class='col-md-3')
                h5='Number of Steps'
                input(class='form-control', id='nSteps', name='nSteps', value='#{nSteps}')
            div(class='col-md-3')
                h5='Start step'
                input(class='form-control', id='startStep', name='startStep', value='#{startStep}')
            div(class='col-md-3')
                h5='Number of nodes'
                input(class='form-control', id='nNodes', name='nNodes', value='#{nNodes}')
        div(class='col-md-12')
            div(class='col-md-6')
                button(class='btn', id='startTestBtn', type='submit') Start test
            div(class='col-md-6')
                button(class='btn', id='downloadTestFiles', type='submit') Download results
    div(id='test-results', class='col-md-10 col-md-offset-1')
        div(id='testInProgressDiv', class='h4')
            !{inProgress}
        
        h3='Results'
        !{testResults}
        